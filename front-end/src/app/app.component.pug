h1.justify-content-center {{title}}
.flex-container(id="application")
  .flex-item
    .col#apiDiv
      .mb-3(role="button")
        .list-group-item.list-group-item-info((click)="openAddApiModal()")
          .row
            .col-10 Add an API to test
            i.material-icons-round.col-1 add
      app-api-list
  .flex-item
    div([hidden]="apiSelected==null")
      .col#serverDiv
        .mb-3.scroll-area50(role="button")
          .list-group-item.list-group-item-info((click)="openAddServerModal()")
            .row
              .col-10 Add a server to test the selected API
              i.material-icons-round.col-1 add
        app-server-list
  .flex-item
    app-uptime-chart([hidden]="apiSelected===null")
  .flex-item
    app-latency-chart([hidden]="apiSelected===null")
